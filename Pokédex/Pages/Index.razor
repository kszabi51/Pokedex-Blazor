@page "/"

<PageTitle>Index</PageTitle>

<MudGrid>
    @if (PokemonList?.results != null)
    {
        @foreach (var pokemon in PokemonList.results)
        {
            <MudItem xs="3">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h4">22.</MudText>
                            <MudText Typo="Typo.h5">@pokemon.name</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudAvatar Image="_content/MudBlazor.Docs/images/mony.png" />
                            <MudAvatar Image="_content/MudBlazor.Docs/images/mony.png" />
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudCardMedia Image="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/6.png" Height="200" />
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    }
</MudGrid>
