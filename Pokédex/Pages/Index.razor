@page "/"

<PageTitle>Index</PageTitle>

<MudGrid>
    @if (PokemonList?.results != null)
    {
        @foreach (var pokemon in PokemonList.results)
        {
            <MudItem xs="3">
                <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">@pokemon.name</MudPaper>
            </MudItem>
            <MudItem xs="9">
                <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">@pokemon.url</MudPaper>
            </MudItem>
        }
    }
</MudGrid>
