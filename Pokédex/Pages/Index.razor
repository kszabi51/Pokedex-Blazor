@page "/"

<PageTitle>Index</PageTitle>

<MudGrid>
    @if (PokemonList?.results != null @*&& PokemonListDataModel != null*@)
    {
        @foreach (var pokemon in PokemonList.results)
        {
            <MudItem xs="3">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h4">@pokemon.Number</MudText>
                            <MudText Typo="Typo.h5">@pokemon.name</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudAvatar Image="_content/MudBlazor.Docs/images/mony.png" />
                            <MudAvatar Image="_content/MudBlazor.Docs/images/mony.png" />
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudCardMedia Image="@pokemon.Picture" Height="200"/>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    }
</MudGrid>
