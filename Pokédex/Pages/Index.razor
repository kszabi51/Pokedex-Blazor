@page "/"

<PageTitle>Index</PageTitle>

<MudGrid>
    @if (PokemonList?.results != null @*&& PokemonListDataModel != null*@)
    {
        @foreach (var pokemon in PokemonList.results)
        {
            <MudItem xs="6" sm="6" md="4" lg="3" xl="2">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h4">@pokemon.Number</MudText>
                            <MudText Typo="Typo.h5">@pokemon.RealName</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            @*<MudAvatar Image="_content/MudBlazor.Docs/images/mony.png" />
                            <MudAvatar Image="_content/MudBlazor.Docs/images/mony.png" />*@
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        <img id="pokemonPicture" src="@pokemon.Picture" Height="200"/>
                        @*<MudCardMedia id="pokemonPicture" Image="@pokemon.Picture" Height="200" Style="object-fit: contain"/>*@
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    }
</MudGrid>
