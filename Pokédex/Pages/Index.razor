@page "/"

<PageTitle>Index</PageTitle>

<MudGrid>
    @if (PokemonList?.results != null)
    {
        @foreach (var pokemon in PokemonList.results)
        {
            <MudItem xs="6" sm="6" md="4" lg="3" xl="2" @onclick="() => PokemonSelected(pokemon.Number)">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h4">@pokemon.Number</MudText>
                            <MudText Typo="Typo.h5">@pokemon.RealName</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <img id="pokemonPicture" src="@pokemon.Picture" Height="200"/>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    }
</MudGrid>
